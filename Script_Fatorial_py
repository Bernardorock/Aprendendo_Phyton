def fator(numero):
    fat = 1
    if numero == 0:
        print(f'Fatorial de 0 é {fat}')
    else:
        for i in range(1,numero):
            fat = fat*numero
            numero = numero -1
    return fat

fatorial = int(input('Insira o número pra o fatorial: \n'))
print(f'O fatorial de {fatorial} é {fator(fatorial)}')
